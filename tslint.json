{
    "extends": "tslint-config-airbnb",
    "rules": {
        "indent": [true, 4],
        "ter-indent": [true, 4],
        "curly": false,
        "brace-style": [true, "allman", {
            "allowSingleLine": true
        }],
        "max-line-length": [true, 120],
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
        "prefer-for-of": false,
        "trailing-comma": false
    }
}
